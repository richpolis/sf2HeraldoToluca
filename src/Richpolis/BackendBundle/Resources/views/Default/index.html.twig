 <script>
    $(document).ready(function() {
        $('#datatable').dataTable({"sPaginationType": "full_numbers"});
        backend();
    });

function backend(url){
   $("button.backend").on("click",function(e){
       e.preventDefault();
       var $registro = $(this).parent().parent();
       var id = $registro.data('id');
       var url = $(this).data('url');
       $(".loader").fadeIn();
       $.ajax({
            url: url,
            type: 'PATCH',
            dataType: 'html',
            success: function(data){
               $registro.html($(data).html());
               noty({ text: 'Actualizacion realizada', layout:'topRight', type:'success',  timeout:2000 });
               $(".loader").fadeOut();
               backend();
            },
            error: function(data){
                noty({ text: 'Error de actualizacion', layout:'topRight', type:'error', timeout:2000 });
                console.log(data);
                $(".loader").fadeOut();
            },
        });
    });
}

 </script>


