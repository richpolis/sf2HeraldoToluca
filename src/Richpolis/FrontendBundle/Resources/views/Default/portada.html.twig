{% extends 'FrontendBundle::layout.html.twig' %}

{% block contenido %}

    <section class="padding columna-3">
        <article class="publicacion">
            <header>
                <h2 class="titulo">
                    {{publicacion.titulo}}
                </h2>
            </header>
            <div class="contenido">
                <div class="contenedor-galeria">
                    <ul class="galeria">
                        {% for galeria in range(1,3) %}
                        <li class="item">
                            <img src="http://placehold.it/616x411" alt="publicacion-imagen-{{galeria}}" class="imagen"/>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                        {{publicacion.descripcion | truncate(250)}}
                <p class="cargador">
                    <a href="{{path('frontend_publicaciones',{'publicacion': publicacion.slug })}}" class="btn ver-nota">Ver nota</a>
                </p>
            </div>
        </article>
        <article class="list-noticias">
            <header>
                <h2 class="titulo azul">
                    Llamados
                </h2>
            </header>
            <section class="noticias">
                {% for noticia in range(1,8) %}
                    {% include 'FrontendBundle:Default:item_largo.html.twig' with {'noticia': noticia} %}
                {% endfor %}
            </section>
            <p class="cargador azul">
                cargar mas notas <span class="cargar-mas-notas azul">+</span>
            </p>
        </article>
    </section>	
{% endblock %}