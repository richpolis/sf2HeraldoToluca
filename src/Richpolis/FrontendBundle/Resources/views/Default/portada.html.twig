{% extends 'FrontendBundle::layout.html.twig' %}

{% block contenido %}
    <section class="padding columna-3">
        {% for publicacion in publicaciones %}
            {% if loop.first == true %}
            <article class="publicacion-principal">
                <div class="contenedor-centrado">
                    <header>
                        <h2 class="titulo">
                            {{publicacion.titulo}}
                        </h2>
                    </header>
                    <div class="contenido">
                        <div class="contenedor-galeria">
                            {% if publicacion.imagen | length > 0 %}
                                <img src="{{publicacion.webPath | imagine_filter('imagen_grande') }}" alt="{{publicacion.titulo}}" class="imagen"/>           
                            {% elseif publicacion.galerias | length > 0 %}
                            <ul class="galeria">
                                {% for galeria in publicacion.galerias %}
                                    <li class="item">
                                        {% if galeria.isImagen %}
                                        <img src="{{galeria.webPath | imagine_filter('imagen_grande') }}" alt="{{galeria.titulo}}" class="imagen"/>
                                        {% else %}
                                        {{ galeria.archivoView | raw }}
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                            {% endif %}
                        </div>
                        <p class="sin-margen-top margen-bottom">
                        {{ publicacion.descripcionCorta | striptags | truncate(250,true,'...') | raw  }}
                        </p>
                        <p class="cargador">
                            <a href="{{path('frontend_publicaciones',{'slug': publicacion.slug })}}" class="btn ver-nota">Ver nota</a>
                        </p>
                    </div>
                </div>
            </article>
            {% endif %}
        {% endfor %}
        <article class="list-noticias">
            <header>
                <h2 class="titulo azul">
                    Llamados
                </h2>
            </header>
            <section class="noticias padding-left">
                {% for noticia in llamados %}
                    {% include 'FrontendBundle:Default:item_largo.html.twig' with {'noticia': noticia} %}
                {% endfor %}
            </section>
            <p class="cargador azul">
                cargar mas notas <span class="cargar-mas-notas azul">+</span>
            </p>
        </article>
    </section>	
{% endblock %}
{% block javascripts %}
{{parent()}}
<script type="text/javascript">
    var $boton;
    $(document).ready(function(){
        $('.galeria').bxSlider({
              mode: 'fade',
              autoHover:true,
              auto: true,
          });   
        $(".bx-prev").addClass('ico_carrusel_inicio_izq');
        $(".bx-next").addClass('ico_carrusel_inicio_der');
    });
</script>
{% endblock %}    