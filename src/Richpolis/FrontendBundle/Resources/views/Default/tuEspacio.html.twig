{% extends 'FrontendBundle::layout.html.twig' %}

{% block contenido %}
    <section class="padding columna-2">
        <article class="publicacion-tu-espacio">
            <header>
                <h2 class="titulo">
                    tu espacio
                </h2>
            </header>
            <div class="contenido">
                <div class="titulo-contenido">
                    tema actual:
                </div>
                <div class="contenido-principal">
                    {{publicacion.descripcion | raw }}
                </div>
                <div class="contenido-informacion">
                    Tu espacio 
                    es una herramienta dentro del portal que mensualmente convoca diversos temas 
                    relevantes para la comunidad, desplegandolos en este TU ESPACIO. 
                    <span style="color: blue;">Participa rellenando los siguientes campos.</span>
                </div>
            </div>
            <div class="formulario">
                <form action="{{ path('frontend_tu_espacio',{'slug': publicacion.slug,'contar': false}) }}" class="validate" id="formComentarios" method="post" {{ form_enctype(form)}}>
                    {{form_errors(form)}}
					<div class="controles-izquierdos">
                        {{form_row(form.username)}}
                        {{form_row(form.email)}}
                        {{form_row(form.file)}}
                    </div>
                    <div class="controles-derechos">
                        {{form_row(form.message)}}
                    </div>
                    {{form_rest(form)}}
					<div class="group-control">
						<button class="btn btn-submit">Enviar</button>
					</div>
                </form>
            </div>     
        </article>
        {% if comentarios | length > 0 %}        
        <article class="list-noticias">
            <header>
                <h2 class="titulo azul">
                    publicaciones sobre el tema actual
                </h2>
            </header>
            <section class="noticias">
                {% for comentario in comentarios %}
                    <article class="comentario-tu-espacio">
                        {% if comentario.archivo | length > 0 %}
                        <figure>
                            <img src="{{comentario.webPath | imagine_filter('imagen_200_200')}}" alt="{{comentario.id}}"/>
                        </figure>
                        {% endif %}
                        <div class="contenido">
                            <p class="publicado-por">Publicado por: <span class="username">{{comentario.username}}</span></p>
                            <p class="fecha">{{comentario.createdAt|date('d/m/Y')}}</p>
                            <p class="contenido">
                                {{comentario.message}}
                            </p>
                        </div>
                    </article>
                {% endfor %}
            </section>
        </article>
        {% endif %}    
    </section>	
    {# include 'FrontendBundle:Default:aside.html.twig' #}        
    {{render(controller('FrontendBundle:Default:aside'))}}
{% endblock %}
