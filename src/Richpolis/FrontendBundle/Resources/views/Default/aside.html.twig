{% set aside_arriba = constant('Richpolis\\PublicidadBundle\\Entity\\Publicidad::TIPO_PUBLICIDAD_ASIDE_ARRIBA') %}
{% set aside_abajo = constant('Richpolis\\PublicidadBundle\\Entity\\Publicidad::TIPO_PUBLICIDAD_ASIDE_ABAJO') %}
<aside class="padding-trb columna-1">
    <div class="publicidad aside-arriba sin-padding">
        <ul class="galeria-publicidad">
        {% for publicidad in publicidadArray[aside_arriba] %}
            {% if publicidad.isImagen %}
            <li>
                <a href="{{publicidad.link}}" target="_blank">
                {{ publicidad.archivoView | raw }}
                </a>
            </li>
            {% else %}    
            <li>{{ publicidad.archivoView | raw }}</li>
            {% endif %}
        {% else %}
            <li><img src="http://placehold.it/300x250/ffffff/ffffff" alt=""/></li>
        {% endfor %}
        </ul>    
    </div>
    <article id="lomasvisto-comentado">
        <header>
            <p class="titulo-tabs">
                lo m√°s  <span data-tab="lomas-comentado" class="tab tab-comentado">comentado</span><span data-tab="lomas-visto" class="tab tab-visto active">visto</span>
            </p>
        </header>
        <div class="contenido lomas lomas-visto">
            <select name="cbLoMasVisto" id="cbLoMasVisto" class="control-lomas">
                <option value="categoria1">lo mas visto</option>
                {% for categoria in categorias %}
                    <option value="{{categoria.id}}">{{categoria.categoria}}</option>
                {% endfor %}    
            </select>
            <ul>
                {% for item in lomasvistos %}
                <li class="item-lomas-visto">
                        <div class="numero">{{loop.index}}</div>
                        <div class="contenido">{{item.titulo}}</div>
                        <figure class="thumbnail-mini">
                            <a href="{{path('frontend_publicaciones',{'slug':item.slug})}}">
                            {% if item.imagen | length > 0 %}
                                <img src="{{item.webPath | imagine_filter('imagen_90_60') }}" alt="{{item.titulo}}"/>
                            {% else %}
                                <img src="{{item.galerias[0].webPath | imagine_filter('imagen_90_60') }}" alt="{{item.galerias[0].titulo}}"/>
                            {% endif %}
                            </a>
                        </figure>
                </li>
                {% endfor %}
            </ul>
        </div>
        <div class="contenido lomas lomas-comentado">
            <select name="cbLoMasComentado" id="cbLoMasComentado"  class="control-lomas">
                <option value="categoria1">Lo mas comentado</option>
                {% for categoria in categorias %}
                    <option value="{{categoria.id}}">{{categoria.categoria}}</option>
                {% endfor %}
            </select>
            <ul>
                {% for item in lomascomentados %}
                <li class="item-lomas-comentado">
                    <div class="numero">{{loop.index}}</div>
                        <div class="contenido">{{item.titulo}}</div>
                        <figure class="thumbnail-mini">
                            <a href="{{path('frontend_publicaciones',{'slug':item.slug})}}">
                            {% if item.imagen | length > 0 %}
                                <img src="{{item.webPath | imagine_filter('imagen_90_60') }}" alt="{{item.titulo}}"/>
                            {% else %}
                                <img src="{{item.galerias[0].webPath | imagine_filter('imagen_90_60') }}" alt="{{item.galerias[0].titulo}}"/>
                            {% endif %}
                            </a>    
                        </figure>
                </li>
                {% endfor%}
            </ul>
        </div>
    </article>
    <article id="ediciones-pdf">
             <header class="ediciones-pdf ico_edicioespdf">
