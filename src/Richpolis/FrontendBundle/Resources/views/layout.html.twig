<script>
$(document).ready(function(){
          
          $('.galeria-publicidad').bxSlider({
                pager: false,
                controls: false,
                auto: true,
                pause: 8000,
                autoHover: true,
          });
          
          $('.galeria-publicidad-head-left').bxSlider({
                pager: false,
                controls: false,
                auto: true,
                pause: 8000,
                slideWidth: 728,
                autoHover: true,
          });
          
          $('.galeria-publicidad-head-right').bxSlider({
                pager: false,
                controls: false,
                auto: true,
                pause: 8000,
                slideWidth: 230,
                autoHover: true
          });

          $(".tab").on("click",function(){
            $(".tab").removeClass("active");
            $(this).addClass("active");
            var tabClass = $(this).data('tab');
            $(".lomas").fadeOut("fast");
            $("."+tabClass).fadeIn("fast");
          });

          $(".tab-visto").click();
          
          $(".ver-nota").on("click",function(){
            	var slug = $(this).data('slug');
            	var url = '{{path('frontend_publicaciones',{'slug': '***'})}}';
				location.href =  url.replace("***", slug);
          });

        setTimeout(function(){
            iniciarCircle();
        },8000);

});
		
function buscar(){
	var $texto = $("#textoBuscar");
	if($texto.val().length>0){
		var $formBuscar = $("#formBuscar");
		$formBuscar.submit();
	}
	
}
function iniciarCircle(){
    $('#minuto-a-minuto ul.lista li:first-child').slideUp("slow",function(){
        $('#minuto-a-minuto ul.lista').append($(this).slideDown("fast"));
    });
    setTimeout(function(){
        iniciarCircle();
    },4000);
}
</script>
